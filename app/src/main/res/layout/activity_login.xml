<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fill_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/constant_88dp"
            />

        <EditText
            android:id="@+id/username"
            android:layout_width="@dimen/constant_250dp"
            android:layout_height="@dimen/constant_40dp"
            android:hint="@string/username"
            android:paddingStart="@dimen/constant_10dp"
            android:textColor="#e4e4e4"
            android:textSize="@dimen/constant_12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/constant_196dp"
            android:background="@drawable/border"
            tools:ignore="RtlSymmetry" />
        <EditText
            android:id="@+id/password"
            android:layout_width="@dimen/constant_250dp"
            android:layout_height="@dimen/constant_40dp"
            android:hint="@string/password"
            android:paddingStart="@dimen/constant_10dp"
            android:textColor="#e4e4e4"
            android:textSize="@dimen/constant_12sp"
            app:layout_constraintStart_toStartOf="@+id/username"
            app:layout_constraintEnd_toEndOf="@+id/username"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginTop="@dimen/constant_10dp"
            android:background="@drawable/border"
            />
        <CheckBox
            android:id="@+id/rememberMe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rememberMe"
            android:textColor="#222222"
            android:textSize="@dimen/constant_12sp"
            app:layout_constraintStart_toStartOf="@+id/username"
            app:layout_constraintTop_toTopOf="@+id/forgotPassword"
            app:layout_constraintBottom_toBottomOf="@+id/forgotPassword"
            app:layout_constraintEnd_toStartOf="@+id/forgotPassword"
            android:layout_marginEnd="@dimen/constant_37_5dp"
            />
        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgotPassword"
            android:textColor="#222222"
            android:textSize="@dimen/constant_12sp"
            app:layout_constraintEnd_toEndOf="@+id/username"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:layout_marginTop="@dimen/constant_22_5dp"/>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/constant_40dp"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="@id/username"
            app:layout_constraintEnd_toEndOf="@id/username"
            app:layout_constraintTop_toBottomOf="@id/forgotPassword"
            android:layout_marginTop="@dimen/constant_22_5dp"
            android:backgroundTint="#1f4ba5"
            android:background="@drawable/button_bg_rounded_corners"
            />

        <TextView
            android:id="@+id/orConnectMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orConnectMe"
            app:layout_constraintStart_toStartOf="@id/username"
            app:layout_constraintEnd_toEndOf="@id/username"
            app:layout_constraintTop_toBottomOf="@id/loginButton"
            android:layout_marginTop="@dimen/constant_26_5dp"
            />

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="@dimen/constant_120dp"
            android:layout_height="@dimen/constant_40dp"
            android:src="@drawable/fb"
            app:layout_constraintStart_toStartOf="@id/username"
            app:layout_constraintTop_toBottomOf="@id/orConnectMe"
            android:layout_marginTop="@dimen/constant_29_5dp"
            />

        <ImageView
            android:id="@+id/tw"
            android:layout_width="@dimen/constant_120dp"
            android:layout_height="@dimen/constant_40dp"
            android:src="@drawable/tw"
            app:layout_constraintEnd_toEndOf="@id/username"
            app:layout_constraintTop_toBottomOf="@id/orConnectMe"
            android:layout_marginTop="@dimen/constant_29_5dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/signupWithEmail"
            android:textAllCaps="false"
            android:textColor="#1f4ba5"
            android:textSize="@dimen/constant_12sp"
            app:layout_constraintStart_toStartOf="@id/username"
            app:layout_constraintEnd_toEndOf="@id/username"
            app:layout_constraintTop_toBottomOf="@id/facebook"
            android:layout_marginTop="@dimen/constant_88_5dp"
            android:background="@drawable/button_bg_rounded_corners"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
